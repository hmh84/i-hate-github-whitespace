{
	"manifest_version": 3,
	"name": "I Hate GitHub White Space",
	"version": "1.1",
	"description": "Automatically adds the hide white space filter to the GitHub diff view.",
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"host_permissions": ["https://github.com/*"],
	"content_scripts": [
		{
			"matches": ["https://github.com/*"],
			"js": ["content.js"]
		}
	],
	"content_security_policy": {
		"extension_pages": "default-src 'self'"
	}
}
